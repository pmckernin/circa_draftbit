<div class="card mb-3">
  <h2 class="card-header h4">
    Note #<%= note.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd><%= note.user_id %></dd>
      <!-- Display user_id end -->

      <dt>Place</dt>
      <!-- Display place_id start -->
      <dd><%= note.place_id %></dd>
      <!-- Display place_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back note, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link note start -->
      <div class="col">
        <% if current_user == @note.user %>
          <%= link_to edit_note_url(note), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link note end -->

      <!-- Delete link note start -->
      <div class="col">
        <% if current_user == @note.user %>
          <%= link_to note, method: :delete, data: { confirm: "Do you really want to delete this note?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link note end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(note.updated_at) %> ago
  </div>
</div>
