<div class="card mb-3">
  <h2 class="card-header h4">
    Pin #<%= pin.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @pin.user.present? %>
          <%= link_to pin.user, pin.user %>
        <% end %>
      </dd>

      <dt>Place</dt>
      <dd>
        <% if @pin.place.present? %>
          <%= link_to pin.place, pin.place %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back pin, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_pin_url(pin), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to pin, method: :delete, data: { confirm: "Do you really want to delete this pin?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(pin.updated_at) %> ago
  </div>
</div>
