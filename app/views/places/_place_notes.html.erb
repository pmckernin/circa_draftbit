<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Notes

    <a data-toggle="collapse" href="#place_notes_new_form">
      Add note
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @place.notes.each do |note| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to note, note %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <% if current_user == note.user %>
          <%= link_to note, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="place_notes_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "places/place_notes_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
