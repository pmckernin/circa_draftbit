<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Pins

    <a data-toggle="collapse" href="#place_pins_new_form">
      Add pin
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @place.pins.each do |pin| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to pin, pin %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to pin, method: :delete, data: { confirm: "Do you really want to delete this pin" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="place_pins_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "places/place_pins_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
